# Palm Cash Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT .env TO GIT!

# ============================================
# Database Configuration
# ============================================
DB_NAME=palmcash_db
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# ============================================
# Email Configuration
# ============================================
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ============================================
# Django Settings
# ============================================
# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=django-insecure-change-this-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# ============================================
# Redis Configuration (for Celery)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Application Settings
# ============================================
# Site URL for links in emails and notifications
SITE_URL=http://localhost:8000

# Currency settings
CURRENCY_CODE=ZMW
CURRENCY_SYMBOL=K

# ============================================
# Loan Settings
# ============================================
LOAN_INTEREST_RATE_DEFAULT=15.0
LOAN_PENALTY_RATE_DEFAULT=2.0
LOAN_GRACE_PERIOD_DAYS=7
LOAN_UPFRONT_PAYMENT_PERCENTAGE=10.0

# ============================================
# Phone Number Settings
# ============================================
PHONENUMBER_DEFAULT_REGION=ZM

# ============================================
# System Settings
# ============================================
SYSTEM_LAUNCH_DATE=2025-09-30
